<?xml version="1.0" encoding="utf-8"?>

<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.scriptsbundle.nokri.candidate.dashboard.fragments.Nokri_CandidateDashboardFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <LinearLayout
            android:id="@+id/shimmerMain"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_view_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:visibility="gone"
                shimmer:duration="800">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />

                    <include layout="@layout/data_placeholder_list_1" />
                </LinearLayout>

                <!-- Adding 7 rows of placeholders -->

            </com.facebook.shimmer.ShimmerFrameLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:descendantFocusability="blocksDescendants">

                    <FrameLayout
                        android:id="@+id/background_circle"
                        android:layout_width="match_parent"
                        android:layout_height="90dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/saa" />

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/img_profile"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            app:civ_shadow="true"
                            app:civ_shadow_color="@color/edit_profile_grey"
                            app:civ_shadow_radius="8" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/container1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/background_circle"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="5dp">

                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/grey"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_facebook"
                                android:layout_width="@dimen/social_icon_size"
                                android:layout_height="@dimen/social_icon_size"
                                android:background="@drawable/facebook" />

                            <ImageView
                                android:id="@+id/img_twitter"
                                android:layout_width="@dimen/social_icon_size"
                                android:layout_height="@dimen/social_icon_size"
                                android:layout_marginStart="5dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/twitter" />

                            <ImageView
                                android:id="@+id/img_linkedin"
                                android:layout_width="@dimen/social_icon_size"
                                android:layout_height="@dimen/social_icon_size"
                                android:layout_marginStart="5dp"

                                android:layout_marginLeft="5dp"
                                android:background="@drawable/linkedin" />

                            <ImageView
                                android:id="@+id/img_gooogle_plus"
                                android:layout_width="@dimen/social_icon_size"
                                android:layout_height="@dimen/social_icon_size"
                                android:layout_marginStart="5dp"

                                android:layout_marginLeft="5dp"
                                android:background="@drawable/ic_instagram" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/container1"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <TextView
                            android:id="@+id/txt_your_dashboard"
                            android:layout_width="wrap_content"


                            android:layout_height="wrap_content"
                            android:textColor="@color/black" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"></androidx.recyclerview.widget.RecyclerView>

                        <TextView
                            android:id="@+id/txt_about_me"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/txt_about_me_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="OpenSans"
                            android:textSize="13sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/mapLayout">



                            <TextView
                                android:id="@+id/txt_location_and_map"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="15dp"
                                android:textColor="@color/black" />

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map_fragment"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>
            </androidx.core.widget.NestedScrollView>
        </RelativeLayout>


    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
