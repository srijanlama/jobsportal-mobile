<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="com.scriptsbundle.nokri.employeer.jobs.fragments.Nokri_ResumeReceivedFragment">


    <LinearLayout
            android:id="@+id/shimmerMain"
            android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="gone"
            shimmer:duration="800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
                <include layout="@layout/data_placeholder_list_1" />
            </LinearLayout>

            <!-- Adding 7 rows of placeholders -->

        </com.facebook.shimmer.ShimmerFrameLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Spinner
            android:id="@+id/spinner"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown"

            android:theme="@style/ThemeSpinnerBlue"></Spinner>

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:padding="5dp">

            <EditText
                android:id="@+id/edittxt_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_toStartOf="@id/img_btn_search"
                android:layout_toLeftOf="@id/img_btn_search"
                android:background="@drawable/rectangle_faq"
                android:maxLines="1"
                android:padding="10dp"
                android:textAlignment="viewStart"

                android:textColorHint="@color/dark_grey"
                android:textSize="11sp" />

            <ImageButton
                android:id="@+id/img_btn_search"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:src="@drawable/ic_search_white_medium" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/container"
            android:layout_marginTop="5dp">

        </androidx.recyclerview.widget.RecyclerView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/recyclerview">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_load_more"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/rounded_button"
                android:text="Load More"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/msg_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp"
            android:visibility="gone"
            android:weightSum="2">

            <ImageView
                android:id="@+id/img_message"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/ic_notfound" />

            <TextView
                android:id="@+id/txt_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>
